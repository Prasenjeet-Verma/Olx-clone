<%- include('partials/head') %> 
</head>
<body class="bg-gray-50">
   <%- include('partials/header') %>

   <div class="max-w-6xl mx-auto px-4 py-6">
     <h1 class="text-xl sm:text-2xl font-bold mb-6 text-center">My Favorites</h1>

     <!-- Responsive grid -->
     <div class="grid gap-6 grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4">
       <% favorites.forEach(fav => { %>
         <div class="bg-white border rounded-2xl shadow hover:shadow-lg transition relative overflow-hidden group">
           
           <!-- üñ§ Heart Icon -->
           <button 
             class="absolute top-3 right-3 bg-white p-2 rounded-full shadow hover:scale-110 transition
                    <%= fav.type === "Car" ? 'text-red-500' : 'text-gray-500' %>"
             data-id="<%= fav.data._id %>" 
             data-type="<%= fav.type %>"
             onclick="event.preventDefault(); toggleFavorite(this)">
             ‚ù§Ô∏è
           </button>

           <!-- üîó Card clickable -->
           <% if (fav.type === "Car") { %>
             <a href="/cars/<%= fav.data._id %>" class="block">
               <img src="<%= fav.data.photos?.[0] %>" alt="Car" 
                 class="w-full h-48 object-cover rounded-t-2xl group-hover:scale-105 transition" />
               <div class="p-4">
                 <h3 class="font-semibold text-lg truncate"><%= fav.data.adTitle %></h3>
                 <p class="text-blue-600 font-bold mt-1">‚Çπ<%= fav.data.price %></p>
               </div>
             </a>
           <% } else if (fav.type === "Property") { %>
             <a href="/properties/<%= fav.data._id %>" class="block">
               <img src="<%= fav.data.photos?.[0] %>" alt="Property" 
                 class="w-full h-48 object-cover rounded-t-2xl group-hover:scale-105 transition" />
               <div class="p-4">
                 <h3 class="font-semibold text-lg truncate"><%= fav.data.adTitle %></h3>
                 <p class="text-green-600 font-bold mt-1">‚Çπ<%= fav.data.price %></p>
               </div>
             </a>
           <% } %>
         </div>
       <% }) %>
     </div>
   </div>

   <script>
   async function toggleFavorite(button) {
     const id = button.dataset.id;
     const type = button.dataset.type;

     try {
       const res = await fetch("/toggle", {
         method: "POST",
         headers: { "Content-Type": "application/json" },
         body: JSON.stringify({ id, type })
       });
       const data = await res.json();

       if (data.isFavorite) {
         button.classList.add("text-red-500");
         button.classList.remove("text-gray-500");
       } else {
         // ‚ùå Removed from favorites ‚Üí fade out card
         button.closest(".bg-white").style.display = "none";
       }
     } catch (err) {
       console.error("toggleFavorite error:", err);
       alert("Failed to update favorites");
     }
   }
   </script>
</body>
</html>
